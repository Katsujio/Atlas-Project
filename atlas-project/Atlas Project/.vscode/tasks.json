{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create frontend (Vite)",
      "type": "shell",
      "command": "npm create vite@latest . -- --template react && npm i",
      "options": {
        "cwd": "${workspaceFolder:frontend}"
      }
    },
    {
      "label": "Start backend",
      "type": "shell",
      "command": "uvicorn app.main:app --reload --port 8000",
      "options": {
        "cwd": "${workspaceFolder:backend}"
      }
    },
    {
      "label": "Start frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder:frontend}"
      }
    }
  ]
}